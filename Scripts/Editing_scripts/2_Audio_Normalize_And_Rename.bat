@echo off
REM ------------------------------------------------------------
REM run_normalize.bat
REM Перетащите папку с аудио на этот файл,
REM или запустите двойным кликом и введите путь вручную.
REM ------------------------------------------------------------

setlocal

REM 1) Получим папку из первого аргумента или спросим у пользователя
if "%~1"=="" (
  set /p folder=Введите полный путь к папке с аудио:
) else (
  set "folder=%~1"
)

REM 2) Проверим, что папка существует
if not exist "%folder%\." (
  echo.
  echo Папка "%folder%" не найдена.
  echo Убедитесь, что путь введен правильно.
  pause
  exit /b 1
)

REM 3) Запустим Python-скрипт, передав путь
python "%~dp0/scripts/normalize_audio_files.py" "%folder%"

pause
